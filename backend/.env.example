# Anthropic
ANTHROPIC_API_KEY=your_anthropic_key

# ElevenLabs
ELEVENLABS_API_KEY=your_elevenlabs_key

# ElevenLabs Voice ID (optional - uses Rachel by default)
# To use your custom cloned voice:
# 1. Go to https://elevenlabs.io/app/voice-library
# 2. Click on your custom voice
# 3. Copy the Voice ID from the URL or voice settings
# 4. Paste it here
ELEVENLABS_VOICE_ID=EXAVITQu4vr4xnSDxMaL

# OpenAI (for Whisper)
OPENAI_API_KEY=your_openai_key

# Database
DATABASE_URL=postgresql+asyncpg://user:pass@neon.tech:5432/demo_copilot

# Skip database initialization (set to true for development without database)
# If set to true, the backend will start without attempting to connect to the database
SKIP_DATABASE=false

# Redis (for session management)
REDIS_URL=redis://localhost:6379

# InSign Demo Environment
INSIGN_DEMO_URL=https://demo.insign.io
INSIGN_DEMO_EMAIL=demo@numberlabs.ai
INSIGN_DEMO_PASSWORD=your_demo_password

# Server URLs
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Railway Production (set these in Railway dashboard)
# FRONTEND_URL=https://your-frontend.railway.app
# BACKEND_URL=https://your-backend.railway.app

# Audio Playback (Development)
# Set to true to play audio on the backend server's speakers (requires mpg123/ffplay/mpv/vlc)
# This is useful for local testing. In production, audio should be streamed to the frontend.
PLAY_AUDIO_LOCALLY=false

# Audio Cache Directory
# Directory to store generated audio files for reuse (saves ElevenLabs credits)
# Default: ./audio_cache (relative to backend directory)
AUDIO_CACHE_DIR=./audio_cache
